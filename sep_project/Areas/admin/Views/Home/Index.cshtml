@{
    ViewData["Title"] = "employee";
}

@model IEnumerable<Employee>
<br />
<br />
<a class="btn btn-info" asp-action="create" asp-controller="home">Add New Employee</a>
<table class="table table-hover">
    <thead>
        <tr>

            @* <th>Employee_Id</th> *@
            <th>Employee_#</th>
            <th>Employee_Name</th>
            <th>Employee_Email</th>
            <th>Employee_Salary</th>
            <th>Employee_Country</th>
            <th>Hire_Date</th>
            <th>Department</th>
            <th colspan="2">Operation</th>

        </tr>
    </thead>
    <tbody>
        @{
            int counter = 1;
        }
        @foreach (var data in Model)
        {
            <tr>
                <td>@counter</td>
                @*   <td>@data.Employee_Id</td> *@
                <td>@data.Employee_Name</td>
                <td>@data.Employee_Email</td>
                <td>@data.Employee_Salary</td>
                <td>@data.Employee_Country</td>
                <td>@data.Hire_Date.ToString("dd-MMM-yyyy")</td>
                <td>@data.department?.Department_Name</td>
                <td><a class="btn btn-outline-primary" asp-route-id="@data.Employee_Id" asp-action="Edit" asp-controller="Home">Edit</a></td>
                <td><a class="btn btn-outline-danger" asp-route-id="@data.Employee_Id" asp-action="Delete" asp-controller="Home">Delete</a></td>
            </tr>
            counter++;
        }
        @*       <tr>
         <td>mhammad</td>
         <td>moh@gmail.com</td>
         <td>1900</td>
         <td>jordan</td>
         <td>17-5-2018</td>
        </tr>
        <tr>
            <td>ali</td>
            <td>al@gmail.com</td>
            <td>1900</td>
            <td>jordan</td>
            <td>17-5-2018</td>
        </tr> *@
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3"> Sum Salary</td>
            <td colspan="3">@Model.Sum(e => e.Employee_Salary)</td>

        </tr>
    </tfoot>
</table>


