@{
    ViewData["Title"] = "Delete Task";
}
@model sep_project.Models.Task

<div style="margin:20px">
<h2 style="color:darkred">Delete Task</h2>

<h4>Are you sure you want to delete this task?</h4>
<div>
    <strong>@Model.Title</strong><br />
    <p>@Model.Description</p>
</div>

<form asp-action="Delete_Task" method="post">
    <input type="hidden" asp-for="Task_Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Task" class="btn btn-secondary">Cancel</a>
</form>

</div>